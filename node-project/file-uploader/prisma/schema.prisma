generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  email     String @unique
  password  String

  Folder Folder[]
  File   File[]
}

model Folder {
  id             Int      @id @default(autoincrement())
  name           String
  parentFolderId Int?
  userId         Int
  createdAt      DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id])
  parent   Folder?  @relation("FolderHierarchy", fields: [parentFolderId], references: [id])
  children Folder[] @relation("FolderHierarchy")

  File File[]
}

model File {
  id           Int      @id @default(autoincrement())
  name         String
  path         String
  size         Int
  mimeType     String
  publicId     String
  resourcetype String
  folderId     Int?
  userId       Int
  createdAt    DateTime @default(now())

  folder Folder? @relation(fields: [folderId], references: [id])
  user   User    @relation(fields: [userId], references: [id])
}
